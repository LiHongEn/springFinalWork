<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.li.Mapper.Interface.StudentMapper">
    <select id="findAllStudent" resultType="com.li.pojo.Student" >
        select * from jdbc.studentsimformation;
    </select>

    <delete id="DeleteStudent" parameterType="int">
        delete from jdbc.studentsimformation where id =#{id};
    </delete>

    <insert id="addStudent" parameterType="com.li.pojo.Student">
        insert into jdbc.studentsimformation (id,name,major,phone) values (#{id},#{name},#{major},#{phone});
    </insert>

    <select id="QUeryStudentById" parameterType="int" resultType="com.li.pojo.Student">
        select * from jdbc.studentsimformation where id = #{id};
    </select>

    <update id="UpdataStudent" parameterType="com.li.pojo.Student" >
        update jdbc.studentsimformation set name = #{name} ,major = #{major} ,phone = #{phone} where id = #{id};
    </update>
</mapper>